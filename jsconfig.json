{
    "compilerOptions": {
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "module": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "vue": ["/node_modules/vue/dist/vue.esm.js"],
            "@root/*": ["./*"],
            "src/*": ["./src/*"],
            "js/*": ["./src/js/*"],
            "adapters/*": ["./src/js/adapters/*"],
            "components": ["./src/js/components"],
            "components/*": ["./src/js/components/*"],
            "atoms/*": ["./src/js/components/atoms/*"],
            "molecules/*": ["./src/js/components/molecules/*"],
            "organisms/*": ["./src/js/components/organisms/*"],
            "organisms-page/*": ["./src/js/components/organisms-page/*"],
            "constants/*": ["./src/js/constants/*"],
            "definitions/*": ["./src/js/definitions/*"],
            "mixins/*": ["./src/js/mixins/*"],
            "router/*": ["./src/js/router/*"],
            "services/*": ["./src/js/services/*"],
            "utils/*": ["./src/js/utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "storybook-static"
    ]
}