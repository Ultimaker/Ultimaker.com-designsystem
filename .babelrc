{
    "presets": [
        ["env", {
            "debug": false,
            "useBuiltIns": true
        }],
        "stage-2"
    ],
    "comments": false,
    "env": {
        "test": {
            "presets": ["env"],
            "plugins": [
                [
                    "istanbul",
                    {
                        "exclude": [
                            "**/*.spec.js",
                            "**/*.stories.js"
                        ]
                    }
                ]
            ]
        },
        "jest": {
            "presets": ["env"],
            "plugins": [
                [
                    "require-context-hook"
                ]
            ]
        }
    }
}
